{
  "name": "planner",
  "version": "0.0.1",
  "description": "",
  "author": "Thiago Elias",
  "homepage": "https://nest-template-todo.onrender.com/",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:prod": "node ./dist/main.js",
    "dev": "dotenv -e .env.development -- nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node ./dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.test -- prisma migrate reset --force & jest",
    "test:watch": "dotenv -e .env.test -- npx prisma migrate reset --force & jest --watch",
    "test:cov": "dotenv -e .env.test -- npx prisma migrate reset --force & jest --coverage",
    "test:debug": "dotenv -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- npx prisma migrate reset --force & jest --config ./test/jest-e2e.json",
    "test:file": "dotenv -e .env.test -- prisma migrate reset --force & jest case2.spec",
    "test:file:watch": "dotenv -e .env.test -- prisma migrate reset --force & jest budgets.controller.spec --watch",
    "migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "db:push": "dotenv -e .env.development -- npx prisma db push",
    "studio": "dotenv -e .env.development -- prisma studio"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@prisma/adapter-pg": "^5.9.1",
    "@prisma/client": "^5.8.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cors-ts": "^1.0.3",
    "dotenv-cli": "^7.3.0",
    "moment": "^2.30.1",
    "mongoose": "^8.3.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "setupFiles": [
      "../test/setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
